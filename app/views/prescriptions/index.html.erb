<h1> <%= @doctor.name  %> </h1>


<h2>Prescriptions</h2>

<table>
    <thead>
        <tr>
            <th>Title</th>
            <th>Date</th>
            <th colspan="3">Action</th>
        </tr>
    </thead>

    <tbody>
    <% @prescriptions.each do |prescription| %>
        <tr>
            <td>
            <%= prescription.title %>
            </td>
            <td>
            <%= prescription.date %>
            </td>
            <td>
            <%= link_to 'View', doctor_prescription_path(@doctor.id, prescription.id) %>
            <%= link_to 'Edit', edit_doctor_prescription_path(@doctor.id, prescription.id) %>
            <%= link_to 'Delete', doctor_prescription_path(@doctor.id, prescription.id), method: :delete, data: {confirm: 'Are you sure?'} %>
            </td>
        </tr>
    <% end %>
    </tbody>
</table>


<%= link_to 'Add new prescription', new_doctor_prescription_path %>
<br>
<%= link_to 'Go back', doctors_path %>